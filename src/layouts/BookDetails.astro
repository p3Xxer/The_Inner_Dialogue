---
import { render, type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BackButton from "@/components/BackButton.astro";
import BackToTopButton from "@/components/BackToTopButton.astro";
import { SITE } from "@/config";

type Props = {
  book: CollectionEntry<"library">;
};

const { book } = Astro.props;
const { title, bookAuthor, genre, coverImage, dateRead } = book.data;

const { Content } = await render(book);

const dateStr = dateRead.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
});
---

<Layout
  title={`${title} | ${SITE.title}`}
  description={`${title} by ${bookAuthor}`}
  scrollSmooth={true}
>
  <Header />
  <BackButton />
  <main
    id="main-content"
    class:list={["app-layout pb-12", { "mt-8": !SITE.showBackButton }]}
  >
    <div class="flex flex-col gap-6 sm:flex-row sm:gap-8">
      <Image
        src={coverImage}
        alt={`Cover of ${title}`}
        width={180}
        height={270}
        class="h-[270px] w-[180px] shrink-0 self-start rounded object-cover shadow-md"
      />
      <div class="flex flex-col gap-3">
        <h1 class="text-2xl font-bold text-white sm:text-3xl">{title}</h1>
        <p class="text-lg text-text-secondary">{bookAuthor}</p>
        <ul class="flex flex-wrap gap-2">
          {
            genre.map(g => (
              <li class="rounded-full border border-border-subtle px-3 py-1 text-sm text-text-secondary">
                {g}
              </li>
            ))
          }
        </ul>
        <p class="text-sm text-text-muted">Read {dateStr}</p>
      </div>
    </div>

    <hr class="my-8 border-dashed" />

    <article id="article" class="app-prose w-full max-w-app">
      <Content />
    </article>

    <BackToTopButton />
  </main>
  <Footer />
</Layout>
